<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
<hibernate-mapping>
   <class name="env.Entities.User" table="Users">
      <meta attribute="class-description">
         This class contains the employee detail. 
      </meta>
      <id name="userId" type="int" column="idUsers">
         <generator class="native"/>
      </id>
      <property name="userName" column="username" type="string"/>
      <property name="userPassword" column="userPassword" type="string"/>
      <property name="userEmail" column="userEmail" type="string"/>
      <property name="dateCreated" column="dateCreated" type="java.sql.Date"/>
      <property name="isActive" column="isActive" type="boolean"/>
      <property name="salt" column="salt" type="string"/>
     <many-to-one unique="true" name="userTypeId" class="env.Entities.UserType" cascade="update"  >
            <column name="user_type_id" not-null="true" />
        </many-to-one>
      
   </class>
</hibernate-mapping>